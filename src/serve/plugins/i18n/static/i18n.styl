translationListMargin = 15px

#hitList
	height 180px
	position absolute
	left 15px
	right 15px
	bottom 15px

.translationList
	absoluteBox(translationListMargin, translationListMargin, 200px, translationListMargin)
	overflow auto

.translationCell
	color #EEE
	font-size 12px
	cursor pointer
	border-top 1px solid rgba(0, 0, 0, 0)
	border-bottom 1px solid rgba(0, 0, 0, 0)
	padding 10px
	font-family 'Gill Sans'

.translationCell:nth-child(even)
	background-color rgba(0, 0, 0, 0.4)

.translationCell .translationKey
	color #EEF
	text-shadow none
	width 320px
	font-size 15px
	margin 0
	text-align left

.translationCell .translationKey
.translationCell .translationValue
	display inline-block
	text-overflow: ellipsis