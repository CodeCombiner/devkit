@import "nib"

@import "includes/base"
@import "includes/dark"
@import "includes/inspector"
@import "includes/icons"

@keyframes tooltipAnimateIn
  0%
    transform translateY(-50%)
    opacity 0
  50%
    transform: translateY(-50%)
    opacity 0
  100%
    transform: translateY(0%)
    opacity 1

@keyframes menuAnimateIn
  0%
    opacity 0
  100%
    opacity 1

// ----- layout

#devkit
  display flex
  align-items stretch
  flex-direction column
  height 100%
  width 100%
  overflow hidden

  #header
    position relative
    z-index 999000

  #middle
    position relative
    flex 1
    display flex
    flex-direction row
    align-items stretch

    #mainContainer
      flex 1
      position relative

      .simulator
        position absolute
        width 100%
        height 100%

        display flex
        align-items center
        justify-content center

        #center
          position relative
          width 0px
          height 0px

          #contents
            position absolute
            z-index 400
            transition all 1s

  #autoHideArea
    position fixed
    top 0px
    left 0px
    right 0px
    height 100px
    z-index 2



#devkit
  #myIP
    position absolute
    top 5px
    right 4px
    font normal 10px monospace
    color #AAA
    overflow hidden
    text-align right
    padding 4px 8px 6px

  .Pane > #_container > div:last-child
    flex 1 // last item should fill remainder of pane by default

.module-frame
  position absolute
  top -10000px
  left -10000px
  width 1px
  height 1px
  opacity 0
  visibility false
  pointer-events none

.simulator
  background-repeat no-repeat

  #frameWrapper
    position relative
    background black

  #frame
    width 100%
    height 100%
    border none

  #toolbar
    position absolute
    top -30px
    left 0
    right 0
    opacity 0.8
    transition all 0.3s
    backface-visibility hidden
    text-align center
    z-index 1000

    #buttonContainer
      position relative
      display inline-block
      white-space nowrap
      margin 0px auto

    button.withTooltip:hover:before
      position absolute
      top 30px
      left 0px
      padding 6px 8px 5px
      content attr(tooltip)
      background #2A2A2A
      border-radius 5px
      white-space nowrap
      animation tooltipAnimateIn
      animation-duration 0.6s

    button.withTooltip:hover:after
      position absolute
      top 19px
      left 5px

      width 0
      height 0
      content ""

      border-width 7px
      border-style solid
      border-color transparent transparent #2A2A2A transparent

      animation tooltipAnimateIn
      animation-duration 0.6s

    .squill-menu
      transition 0.5s all
      animation menuAnimateIn
      animation-duration 0.3s

    .list
      z-index 1

      position absolute
      top 30px
      left 0
      right 0
      padding 5px
      display none

      overflow-y hidden
      overflow-x auto

      #container
        display flex
        flex-flow row wrap
        justify-content center

    .list.active
      display flex
      opacity 1
      top 32px

    .list .device
      display flex
      flex-direction column
      justify-content flex-end
      align-items center

      min-width 100px
      height 100px
      overflow hidden

      padding 5px
      border-radius 2px

    .list .device:hover
      background #333

    .list .device #previewBg
      background-size contain
      background-repeat none
      margin-bottom 5px
      flex-shrink 0

    .list .device #preview
      background-size cover
      background-position 50% 50%
      border-radius 1px
      display flex
      flex-direction column
      justify-content center
      align-items center

    .list .device #resolution
      font 9px Helvetica

    button
      position relative
      outline none
      display inline-block
      border-radius 1px
      background #2E2E2E
      border 1px solid rgba(255, 255, 255, 0.05)
      color #E5E5E5
      padding 6px 8px 4px
      margin 2px 1px 3px 1px
      line-height 16px
      cursor default

    button i
      margin-top -1px

    button:active
      top 1px
      background linear-gradient(top, rgba(50, 50, 50, 0.2), 50% rgba(50, 50, 50, 0.3), 51% rgba(80, 80, 80, 0.3), rgba(110, 110, 110, 0.3))
      border 1px solid rgba(0, 0, 0, 0.7)

    button.disabled i:after
      position absolute
      top -6px
      left 5px
      width 1px
      height 24px
      content ""
      -webkit-transform rotate(38deg)
      background #FFF

    #overflowMenu
      position absolute
      display none
      transition all 0.3s
      top 30px
      right 0
      background #111
      border 1px solid #222

      button
        background none
        display block
        width 100%
        text-align left

  #toolbar.menu-open
    opacity 1

  #background
    position absolute
    z-index -1
    width 100%
    height 100%

  #frameWrapper,
  #frame
    transition all 1s

  #resizeHandle
    position absolute
    width 40px
    height 40px
    cursor se-resize
    bottom -40px
    right -40px

  #splashImage
    position absolute
    top 0px
    left 0px
    pointer-events none
    display none
    width 100%
    height 100%
    background-size cover
    background-position center

    opacity 0
    transition opacity 0.5s

  #mainPage
    position absolute
    top 0px
    right 0px
    width 100%
    height 100%


  .closeButton
    background-color red
    background -moz-linear-gradient(90deg, #555, #777)background -webkit-gradient(linear, left bottom, left top, from(#555), to(#777))
    border-radius 5px-moz-border-radius 5px
    float right

.simulator:hover
  #toolbar
    opacity 1

.no-transitions
  transition none

.simulator.no-transitions
  #frame,
  #frameWrapper,
  #contents
    transition none !important
    pointer-events none !important

