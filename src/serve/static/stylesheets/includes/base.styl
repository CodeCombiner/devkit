html, body
	margin 0px
	padding 0px
	height 100%
	width 100%
	overflow hidden

div, ul, li, select, input
	box-sizing border-box

body, div, span
	-webkit-tap-highlight-color rgba(0,0,0,0)
	-webkit-user-select none

body, select
	font 11px "Avenir Next"
	color #414141

body, div, span
  tap-highlight-color rgba(0, 0, 0, 0)
  user-select none

input
	border-width 1px
	border-radius 4px
	border 1px solid rgba(0, 0, 0, 0.18)
	font-size 12px
	cursor text
	box-shadow
		inset 0px 1px 2px rgba(0, 0, 0, 0.2),
		0px 1px 0px rgba(255, 255, 255, 0.3)
	outline none
	padding 6px 4px 6px 4px
	margin 1px 0px 0px 0px

input:focus
	box-shadow:
		inset 0px 1px 2px rgba(0, 0, 0, 0.2),
		0px 1px 0px rgba(255, 255, 255, 0.3),
		0px 0px 3px rgba(130, 130, 255, 0.9);

  margin-bottom 2px

input[type="button"], button
	border 1px solid #555
	border-radius 3px
	color white
	outline none
	padding 4px 10px 6px
	margin-bottom 2px

button.circle
	border-radius 12px
	opacity 0.9
	padding 0px 0px 0px 2px
	margin-left 5px
	text-align center
	width 20px


button.disabled
	background linear-gradient(bottom, #888, #AAA)
	border 1px solid #999
	cursor default

button:active
	background linear-gradient(bottom, #222, #111)

#_input
	margin 4px
	padding 4px

select
	height 22px

#_label
	color #444
	font-size 12px
	font-weight bold
	text-shadow 1px 1px 0px #CCC
	float left
	margin-top 7px

