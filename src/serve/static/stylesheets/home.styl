@import "nib"

@import "includes/base"
@import "includes/ui"

body
  font-size 14px

#leftPane
  absoluteBox(,55%)
  display flex
  flex-direction column
  align-items center
  justify-content center

#rightPane
  absoluteBox(,,,55%)

#separator
  absoluteBox(40px, 50%, 40px, auto)
  width 1px
  background linear-gradient(180deg,
      rgba(0, 0, 26, 0) 0%,
      rgba(0, 0, 26, 0.15) 20%,
      rgba(0, 0, 26, 0.15) 80%,
      rgba(0, 0, 26, 0) 100%)

#logo
  width 68px
  height 54px
  margin-top 80px
  background url('/icons/logo.png')
  opacity 0.1

.actionCell
  padding 30px
  min-height 50px
  white-space nowrap

  #title
    margin-top 10px

  #icon
    width 40px
    height 40px
    background center no-repeat
    float left
    margin-right 10px

/*** Panel containing the content of the plugin ***/
.mainPanel
  absoluteBox()
  background bglight()
  border-top 1px solid rgba(255, 255, 255, 0.3)

div#ip
  position absolute
  bottom 15px
  left 0
  right 0
  z-index 5
  overflow hidden
  text-align center
  padding 7px 7px 2px 7px

  color #808080
  padding 5px 7px 2px 7px


#appList
  absoluteBox()
  overflow auto
  padding 80px 0px

.appCell
  position absolute
  height 80px
  left 0
  right 0
  padding 15px 10px 20px 90px
  border-radius 10px
  border-top 1px solid rgba(0, 0, 0, 0)
  border-bottom 1px solid rgba(0, 0, 0, 0)

  .appIcon
    position absolute
    left 10px
    top 0

    &.noIcon
      background #EEE
      border 2px solid #CCC

  .appPath
    color #808080
    white-space nowrap
    text-overflow ellipsis
    font-size 10px

    #open
      border none
      background none
      outline none
      cursor pointer

      position relative
      margin-left 5px

      &:after
        glyphicon(arrow-right)

        position absolute
        opacity 0
        transition all 0.3s
        font-size: 10px;
        top: -13px;
        left: -3px;
        background: #DDD;
        width: 15px;
        height: 13px;
        border-radius: 13px;
        border: 5px solid white;
        padding-top: 2px;
        color: #FFF

      &:hover:after
        background #AAA

      &:active:after
        background #888

    &:hover #open:after
      opacity 1

  &:hover:not(.selected)
    cursor pointer
    text-shadow 0px 1px 5px rgba(255, 255, 255, 0.5)
